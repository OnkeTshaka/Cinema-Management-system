@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Edit";
}
<div class="container">
    <div class="panel panel-body" style=" background:rgba(146, 163, 176, 0.23)">
        <div class="form-horizontal">
            @Html.AntiForgeryToken()

            <h2>Edit Roles</h2>
            @Html.ActionLink("List Roles", "Index")|
            @Html.ActionLink("Manage User Roles", "ManageUserRoles")
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)
                <div>
                    Role name
                </div>
                <p>
                    @Html.TextBoxFor(model => model.Name)
                </p>
                <input type="submit" value="Save" class="btn btn-primary" style="border-radius:10px" />
            }
        </div>
    </div>
</div>