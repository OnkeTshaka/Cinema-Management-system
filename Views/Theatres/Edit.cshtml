@model Firewalls.Models.Cinema_Models.Theatre

@{
    ViewBag.Title = "Change Theatre Details";
}

<h2>Change Theatre Details</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
    <div class="form-group">
        @Html.LabelFor(model => model.TheatreName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="color:#111;">
            @Html.DropDownListFor(model => model.TheatreName,
             new[]
             {
