@model IEnumerable<Firewalls.Models.Cinema_Models.Movie>

@{
    ViewBag.Title = "Movies Showing";
}

<h2>Movies Showing</h2>

@if (User.IsInRole("Admin"))
{
 <div>@Html.ActionLink("Add Movies", "Index", "Movies")</div>
}


@foreach (var item in Model)
{
    //double price = Convert.ToInt32(@item.Amount);
    <div class="col-md-3" style="margin-bottom:25px">
        <div class="thumbnail" style=" padding-left:55px;">
            <div class="image">
                <img class="img-responsive" src="data:image/png;base64,@Convert.ToBase64String(item.Image, 0, item.Image.Length)" style="width: 150px; height: 150px" />
            </div><hr />
            <div class="caption" style="border-top:3px solid #808080">
                <h4 style="color:#111;">@Html.DisplayFor(modelItem => item.MovieName)</h4>
                <h5 style="color:#111;">@Html.ActionLink("View Movie", "Details", new { id = item.MovieID })</h5>
                <h6 style="color:#111;">@Html.ActionLink("Book Now", "Create", "Bookings")</h6>
                @*<h5>@price.ToString("F2")</h5>*@
            </div>
        </div>
     
    </div>
}

